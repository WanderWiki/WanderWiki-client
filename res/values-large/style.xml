<resources
xmlns:android="http://schemas.android.com/apk/res/android">     
             
    <!--  Style "home.xml" Buttons -->
          
    <style name="home_big_button" parent="@android:style/Widget.Button">     
        <item name="android:textSize">35sp</item>     
        <item name="android:background">@drawable/home_button</item>     
        <item name="android:layout_width">fill_parent</item>     
        <item name="android:layout_height">fill_parent</item>     
    </style>     
  
         
    <!-- "Display_track_detail.xml" text views -->
            
    <style name="track_details_textview">    
        <item name="android:textSize">30sp</item>    
        <item name="android:textColor">@color/white</item>    
        <item name="android:layout_width">fill_parent</item>    
        <item name="android:layout_height">wrap_content</item>    
        <item name="android:layout_marginBottom">14dp</item>    
    </style>    
              
    <style name="track_details_textview_land" parent="@style/track_details_textview">    
        <item name="android:textSize">18sp</item>    
        <item name="android:layout_marginBottom">10dp</item>    
    </style>    
          
    <!--  advanced_research.xml -->
          
    <style name="advanced_research_textview">   
        <item name="android:layout_width">wrap_content</item>   
        <item name="android:layout_height">wrap_content</item>   
        <item name="android:textSize">35sp</item>   
        <item name="android:textColor">@color/white</item>   
        <item name="android:layout_marginRight">8dp</item>   
    </style>   
          
    <style name="advanced_research_edittext">   
        <item name="android:textSize">35sp</item>           
        <item name="android:layout_width">fill_parent</item>   
        <item name="android:layout_height">wrap_content</item>   
        <item name="android:inputType">text</item>         
        <item name="android:hint"></item>       
        <item name="android:layout_marginTop">15dp</item>   
    </style>   
          
    <style name="advanced_research_textview_land" parent="@style/advanced_research_textview">   
        <item name="android:textSize">25sp</item>   
        <item name="android:layout_marginRight">6dp</item>   
    </style>   
          
    <style name="advanced_research_edittext_land" parent="@style/advanced_research_edittext">   
        <item name="android:layout_marginTop">15dp</item>   
        <item name="android:textSize">25sp</item>   
    </style>   
          
</resources>